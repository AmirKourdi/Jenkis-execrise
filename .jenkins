pipeline {
    environment {
        JENKINS_ENV = "True"
    }
    stages {
        stage('Checkout Source'){
            steps{
                checkout(
                    [
                        $class: 'GitSCM',
                        branches: [[name: 'origin/main']],
                        doGenerateSubmoduleConfigurations: false,
                        extensions: [[$class: "GitLFSPull"]],
                        submoduleCfg: [],
                    ])
            }
        }
    }
    post {
        always {
            echo 'I will always say Hello again!'
        }
    }
}
